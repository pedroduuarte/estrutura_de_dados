package entities;

public class Lista {

	No ref;

	public Lista() {
		this.ref = null;
	}

	public No getRef() {
		return ref;
	}

	public void setRef(No ref) {
		this.ref = ref;
	}

	public boolean listaVazia() {
		return ref == null;
	}

	public void insere(int info) {
		No novoNo = new No(info, ref);
		if (listaVazia()) {
			this.ref = novoNo;
			novoNo.setProx(novoNo);
		} else {
			boolean inserido = false;

			for (No aux = this.ref.getProx(); aux != ref; aux.getProx()) {
				if (info < aux.getInfo()) {
					novoNo.setProx(aux);
					ref.setProx(novoNo);
					inserido = true;
				} else if (info > aux.getInfo() && info < aux.getProx().getInfo()) {
					aux.setProx(novoNo);
					novoNo.setProx(aux.getProx().getProx());
					inserido = true;
				} else {
					novoNo.setProx(this.ref.getProx());
					this.ref = novoNo;
					inserido = true;
				}
			}
		}
	}
}
